<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class='form-container'>
  <div class='information-container'>
    <div class='info info-labels'>
      <%= form.label :title %>
      <%= form.text_field :title ,style: "display: block" %>
    </div>

    <div class='info info-labels'>
      <%= form.label :image %>
      <%= form.file_field :image, class: "image-input" %>
    </div>

    <div class='info info-labels'>
      <%= form.label :body, 'Desc' %>
      <%= form.text_area :body, style: "display: block" %>
    </div>

    <div class='info-styles'>
      <%= form.submit %>
    </div>
  <% end %>

  </div>
  <div class='edit-container'>
    <div>
      <button>Add</button>
    </div>
  </div>
</div>